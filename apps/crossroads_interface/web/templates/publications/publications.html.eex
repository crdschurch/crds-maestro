</div>
<div class="container push-top soft-top">
    <div class="crds-tab-nav" role="tablist">
        <div class="tab-container">
            <a href="#articles" role="tab" class="active" aria-controls="articles" data-toggle="tab">Articles</a>
            <a href="#videos" role="tab"  aria-controls="videos" data-toggle="tab">Videos</a>
            <a href="#podcasts" role="tab"  aria-controls="podcasts" data-toggle="tab">Podcasts</a>
        </div>
    </div>
    <div class="card-deck card-deck--expanded-layout">
        <%= for article <- Enum.reverse(assigns[:articles]) do %>
            <div class="card">
              <a href="/publications/articles/<%= article["id"] %>?source=<%= article["source"] %>">
                    <img alt="Card image caption" class="card-img-top img-responsive" src="<%= article["image"] %>">
                    <div class="card-block">
                        <h4 class="card-title card-title--overlap text-uppercase"><%= article["title"] %></h4>
                        <p class="card-text"><a><%= article["author"] %></a></p>
                    </div>
                </a>
            </div>
        <% end %>
    </div>
</div>
<script type="text/javascript">
    // <![CDATA[
    var tabs = document.querySelectorAll('[role="tab"]');
        var scrollTop = function () {
            window.scrollTo(0, 0);
        };
        var deactivateTabs = function () {
            tabs.forEach(function (e) {
                e.classList.remove("active");
            });
        };
        var activateTab = function () {
            scrollTop();
            deactivateTabs();
            this.classList.add("active");
        };
        for (var i = 0; i < tabs.length; i += 1) {
            tabs[i].addEventListener("click", activateTab);
        }
    // ]]>
</script>
