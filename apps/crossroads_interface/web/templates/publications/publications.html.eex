<div class="jumbotron jumbotron--tall bg-blue">
    <h1 class="section-header text-white">Read. Watch. Learn.</h1>
    <p style="max-width: 640px; margin-left: auto; margin-right: auto;">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut sed erat ut nulla dignissim ultricies.</p>
</div>
<div class="container">
    <div class="col-md-12">
    <%= for main <- get_most_recent(assigns[:articles]) do %>
        <div class="card card--feature">
            <a href="/publications/articles/<%= main["id"] %>?source=<%= main["source"] %>">
                <img alt="Card image caption" src="<%= main["image"] %>" class="card-img-top img-responsive" style="background-image: url('<%= main["image"] %>');">
                <div class="card-block">
                    <h4 class="card-title section-header flush-ends"><%= main["title"] %></h4>
                    <p class="card-text soft-quarter-top flush-bottom"><a><%= main["author"] %></a></p>
                </div>
            </a>
        </div>
    <%= end %>
    </div>
</div>
<div class="container">
    <div class="col-md-3">
        <p>most recent content</p>
    </div>
    <div class="col-md-9">
        <div class="card-deck card-deck--expanded-layout cards-3x">
            <%= for content <- get_featured(assigns[:articles]) do %>
                <div class="card">
                    <a href="/publications/articles/<%= content["id"] %>?source=<%= content["source"] %>">
                        <img alt="Card image caption" class="card-img-top img-responsive" src="<%= content["image"] %>">
                        <div class="card-block">
                            <h4 class="card-title card-title--overlap text-uppercase"><%= content["title"] %></h4>
                            <p class="card-text"><a><%= content["author"] %></a></p>
                        </div>
                    </a>
                </div>
            <%= end %>
        </div>
    </div>
</div>
